 <html>
   <head>
     <link href='homes.css' rel='stylesheet'>
     <script defer src="https://use.fontawesome.com/releases/v5.6.3/js/all.js"></script>
   </head>
   
   <body>
     
      <header>
        <nav>
            <ul class="clearfix">
            <li><i class="fas fa-home"></i>ホーム</li>
            <li>
              <%= link_to homes_film_path do %>
                <i class="fa fa-sign-out"></i> 作品一覧
              <% end %>
            </li>
            <li>
              <%= link_to new_topic_path do %>
                <i class="fas fa-film"></i> 映画館
              <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete, data: { confirm: 'ログアウトしますか？' } do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
            <li>
              <%= link_to homes_ask_path do %>
                <i class="fas fa-envelope-open-text"></i> お問い合わせ
              <% end %>
            </li>
          </ul>
        </nav>
    </header>

    <div class="topic-new-wrapper" >
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">Add Picture</h1>
            <%= form_for @film do |f| %>
              <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image%>
              </div>
              
              <div class="form-group">
                <%= f.label '映画名' %>
                <%= f.text_field :film_name%>
              </div>
    
              <div class="form-group">
                <%= f.label :summary %>
                <%= f.text_area :summary, class: 'form-control' %>
              </div>
    
              <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
    
            <% end %>
          </div>
        </div>
      </div>
    </div>

     
   </body>
   
 </html>
 
