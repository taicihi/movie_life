<html>
    
　 <head>
　     <script src="jquery.min.js" type="text/javascript"></script>
　     <link href='homes.css' rel='stylesheet'>
　     <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
　     <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
　 </head>

  <body>
    
    <header>
        <nav>
            <ul class="clearfix">
              <li><%= link_to 'ホーム', homes_index_path %></li>
              <li>作品一覧</li>
              <li><%= link_to '映画館', new_topic_path %></li>
              <li><%= link_to 'ログアウト',logout_path, method: :delete, data: { confirm: 'ログアウトしますか？' } %></li>
              <li><%= link_to 'お問い合わせ', homes_ask_path %></li>
          </ul>
        </nav>
    </header>
    
    <main class="clearfix">
      
      <div class="film-button">
        <%= link_to '新規投稿はこちらから', films_new_path, { :class => "btn-square-slant" } %>
      </div>
      
      <div class="clearfix">
        <h2 class="films_p">人気作品</h2>
        <div class="slider">
          <div><%= image_tag 'sample1.jpg'%></div>
          <div><%= image_tag 'sample2.jpg'%></div>
          <div><%= image_tag 'sample3.jpg'%></div>
          <div><%= image_tag 'sample4.jpg'%></div>
          <div><%= image_tag 'sample5.jpg'%></div>
          <div><%= image_tag 'sample6.jpg'%></div>
        </div>
      </div> 
      
      <div class="films">
        <h2 class="films_new">新着作品</h2>
        <p>
          <img src="http://placehold.jp/300x200.png" alt="写真" class="example1">
          画像を左に配置して、
          右側にテキストを回り込ませます。
          <br clear="left">
          (映画名）
        </p>
        
      <p>
          <img src="http://placehold.jp/300x200.png" alt="写真" class="example1">
          画像を左に配置して、
          右側にテキストを回り込ませます。
          <br clear="left">
          (映画名）
      </p>
       
      </div>
      
        
    </main>
    <!-- main_end -->
    
    <!-- footer_begin -->
    <footer>
      <ul>
        <li><%= link_to 'ホーム', homes_index_path %></li>
        <li>作品一覧</li>
        <li><%= link_to '映画館', homes_theater_path %></li>
        <li><%= link_to 'お問い合わせ', homes_ask_path %></li>
      </ul>
    
    <small>&copy; 2018 CSS Cafe</small>
    </footer>
    
  <script>
   $('.slider').slick({
     slidesToShow: 3,
     arrows:true,//スライダーの左右に「進む」「戻る」ボタンをつけるか否か
     prevArrow:'<button type="button" class="slick-prev">次へ</button>',//「戻る」ボタンのhtmlを指定
     nextArrow:'<button type="button" class="slick-next">戻る</button>',//「進む」ボタンのhtmlを指定
     autoplay: true,
     autoplaySpeed: 1500,
     centerMode: true,
   });
  </script>
    
    
  </body>
</html>