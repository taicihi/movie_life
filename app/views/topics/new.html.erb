<html>
    
　 <head>
　     <script src="jquery.min.js" type="text/javascript"></script>
　     <link href='homes.css' rel='stylesheet'>
　 </head>

  <body>
    
    <header>
        <nav>
            <ul class="clearfix">
              <li><%= link_to 'ホーム', homes_index_path %></li>
              <li><%= link_to '作品一覧', homes_film_path %></li>
              <li>映画館</li>
              <li><%= link_to 'ログアウト',logout_path, method: :delete, data: { confirm: 'ログアウトしますか？' } %></li>
              <li><%= link_to 'お問い合わせ', homes_ask_path %></li>
          </ul>
        </nav>
    </header>
    
   <div class="topic-new-wrapper" >
        <div class="container-fluid">
          <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <div class="post">
                  <h1 class="text-center">投稿画面</h1>
                  <%= form_for @topic do |f| %>
                    <div class="form-group">
                      <%= f.label '写真', {class: 'topic-name'} %>
                      <%= f.file_field :image%>
                      <p><%= f.check_box :remove_image %>画像を削除する</p>
                    </div>
                    
                    
                    <div class="form-group">
                      <%= f.label '映画館名',{class: 'topic-name'} %>
                      <%= f.text_field :description, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label '収容人数',{class: 'topic-name'} %>
                      <%= f.text_field :description, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label '値段',{class: 'topic-name'} %>
                      <%= f.text_field :description, class: 'form-control' %>
                    </div>
          
                    <div class="form-group">
                      <%= f.label '詳細説明',{class: 'topic-name'} %>
                      <%= f.text_area :description, class: 'form-control' %>
                    </div>
          
                    <%= f.submit '投稿', class: 'btn-1' %>
          
                  <% end %>
                </div>
              </div>
          </div>
        </div>
    </div>

    <!-- footer_begin -->
    <footer>
      <ul>
        <li><%= link_to 'ホーム', homes_index_path %></li>
        <li><%= link_to '作品一覧', homes_film_path %></li>
        <li><%= link_to '映画館', new_topic_path %></li>
        <li><%= link_to 'お問い合わせ', homes_ask_path %></li>
      </ul>
    
    <small>&copy; 2018 CSS Cafe</small>
    </footer>
    
    
  </body>
</html>